<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Regression Test" verbose="3">

	<test name ="Google Test">
	<parameter name="url" value="http://www.google.com" />
	<parameter name="browser" value ="firefox" />
		<classes>
		<class name = "AppTests.GoogleTest"/>
		</classes>
	</test>

	<test name ="OrangeHRM Test">
		<parameter name="url" value="https://www.orangehrm.com/orangehrm-30-day-trial" />
		<parameter name="browser" value="edge" />
	
		<classes>
		<class name = "AppTests.OrangeHRMTest"/>
		</classes>
	</test>
	
	<test name ="DemoOpenCart Test">
	<parameter name="url" value="https://demo.opencart.com/index.php?route=account/register" />
	<parameter name="browser" value="chrome" />
		<classes>
		<class name = "AppTests.DemoOpenCart"/>
		</classes>
	</test>


</suite>